<form
  action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>"
  method="POST"
  enctype="multipart/form-data"
>
  <!--Since we are using this as an include template in update and add product. We need to change this form action and pass it with the
help of ejs. So we are changing /admin/products to <%= submitPath %> which we can pass while including this template-->
  <p>
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="title"
      value="<%= productkeyforform.title %>"
      required
    />
  </p>

  <div id="image-upload-control">
        <p>
        <label for="image">Image</label>
        <input type="file" id="image" name="image" accept="image/png,image/jpg,image/jpeg" <% if(imageRequired) { %> required <% } %>/>
      </p>
      <img src="" alt="Selected image">
  </div>

  <p>
    <label for="summary">Summary</label>
    <input
      type="text"
      id="summary"
      name="summary"
      required
      maxlength="250"
      value="<%= productkeyforform.summary %>"
    />
  </p>

  <p>
    <label for="price">Price</label>
    <input
      type="number"
      id="price"
      name="price"
      min="0.01"
      step="0.01"
      value="<%= productkeyforform.price %>"
      required
    />
  </p>

  <p>
    <label for="description">Description</label>
    <textarea id="description" name="description" rows="7" required>
<%= productkeyforform.description %></textarea
    >
  </p>

  <p>
    <button type="reset" class="btn btn-alt">Reset</button>
    <button class="btn">Save</button>
  </p>
</form>
